<h3 class="title-rev">Games List</h3>

<form action="/games/game-search" method="POST">
    <label>Search a game
        <input type="text" name="search">
    </label>
    <button>Find it</button>
</form>

<div class="page-btn">
{{#if firstPage}}
<form action="/games/game-list/previous">
    <button disabled="true">Previous Page</button>
</form>
{{else}}
<form action="/games/game-list/previous">
    <button>Previous page</button>
</form>
{{/if}}

<form action="/games/game-list/next">
    <button>Next page</button>
</form>
</div>
<div class="container-games">
{{#each data}}
    <div class="oneGame">
     <img src="{{background_image}}" alt="img" width="400px" height="225px">
     <div class="anco-game">
         <a href="/games/game-details/{{this.id}}"><p>{{this.name}}</p></a>
     </div>
    </div>

{{/each}}

