<h3 class="title-rev">Games List</h3>
<div class="container-games">
{{#each data}}
    <div class="oneGame">
     <img src="{{background_image}}" alt="img" width="400px" height="225px">
     <div class="anco-game">
         <a href="/games/game-details/{{this.id}}"><p>{{this.name}}</p></a>
     </div>
     
    </div>
    
{{/each}}

{{#if errorMessage}}
    <p style="color: red;">{{errorMessage}}!!!</p>
{{/if}}

<form action="/games/game-list/{{data.next}}">
    <button>Next page</button>
</form>


</div>